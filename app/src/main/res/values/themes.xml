<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.PictureOfTheDay" parent="Theme.Material3.DayNight">-->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color -->
        <item name="android:navigationBarColor">?superColor_500</item>
        <item name="colorPrimary">?superColor_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">?superColor_100</item>
        <item name="colorOnPrimaryContainer">?superColor_900</item>
        <item name="colorPrimaryInverse">?superColor_200</item>
        <item name="colorSecondary">?superColor_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">?superColor_100</item>
        <item name="colorOnSecondaryContainer">?superColor_900</item>
        <item name="colorTertiary">?superColor_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?superColor_100</item>
        <item name="colorOnTertiaryContainer">?superColor_900</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/StyleForTextInputLayout</item>
        <item name="floatingActionButtonStyle">@style/StyleForFAB</item>
        <item name="chipStyle">@style/StyleForChip</item>
        <item name="tabStyle">@style/StyleForTabLayout</item>
    </style>



</resources>

